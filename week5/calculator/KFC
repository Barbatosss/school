import java.util.Scanner;

public class Myorder {
   
    static Scanner scan = new Scanner(System.in);
    public static void main(String [] args){
       
        KFC();
    
    
    }

    static void KFC(){
        System.out.println("order ");
        System.out.print("order1: ");
        String orderone = scan.next();
        System.out.print("price1: ");
        double pricea = scan.nextDouble();

        System.out.println("order ");
        System.out.print("order2: ");
        String ordertwo = scan.next();
        System.out.print("price2: ");
        double priceb = scan.nextDouble();

        System.out.println("order ");
        System.out.print("order3: ");
        String ordertri = scan.next();
        System.out.print("price3: ");
        double pricec = scan.nextDouble();

        double total = pricea + priceb + pricec;
        System.out.println(orderone + ordertwo + ordertri + ", your total to pay is " + total);
        



    }
    
    


}
